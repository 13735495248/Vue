page{
  height: 100%;
  overflow: hidden;
}
.bg{
  position: relative;
  height: 100%;
}
.header{
  background-color: aqua;
  height: 600rpx;
}
.card{
  position: absolute;
  top: 100rpx;
  left: 20rpx;
  right: 20rpx;
  height: 600rpx;
  background-color: orange;
  border-radius: 15rpx;
}
.content{
  position: absolute;
  top: 180rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: orangered;
}
